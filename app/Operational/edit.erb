<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @operational.Seguridad %></h1>
    <a href="<%= url_for :action => :show, :id => @operational.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @operational.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @operational.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="operational[Seguridad]" class="fieldLabel">Seguridad</label>
            <input type="text" id="operational[Seguridad]" name="operational[Seguridad]" value="<%= @operational.Seguridad %>" <%= placeholder( "Seguridad" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
