<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @learning_and_growth.object %>
    <h1>Edit <%= @learning_and_growth.Rotation%></h1>
    <%= link_to "Delete", :action => :delete, :id => @learning_and_growth.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @learning_and_growth.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Rotation: </td>
              <td class="itemValue"><input type="text" name="learning_and_growth[Rotation]" value="<%= @learning_and_growth.Rotation %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
