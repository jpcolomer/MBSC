<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @learning_and_growth.Rotation %></h1>
    <a href="<%= url_for :action => :show, :id => @learning_and_growth.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @learning_and_growth.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @learning_and_growth.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="learning_and_growth[Rotation]" class="fieldLabel">Rotation</label>
            <input type="text" id="learning_and_growth[Rotation]" name="learning_and_growth[Rotation]" value="<%= @learning_and_growth.Rotation %>" <%= placeholder( "Rotation" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
