<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @roce.value %></h1>
    <a href="<%= url_for :action => :show, :id => @roce.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @roce.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @roce.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="roce[value]" class="fieldLabel">Value</label>
            <input type="text" id="roce[value]" name="roce[value]" value="<%= @roce.value %>" <%= placeholder( "Value" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="roce[flag]" class="fieldLabel">Flag</label>
            <input type="text" id="roce[flag]" name="roce[flag]" value="<%= @roce.flag %>" <%= placeholder( "Flag" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="roce[tend]" class="fieldLabel">Tend</label>
            <input type="text" id="roce[tend]" name="roce[tend]" value="<%= @roce.tend %>" <%= placeholder( "Tend" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
