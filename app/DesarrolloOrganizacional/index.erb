<div data-role="page" id="kpi_index">

  <div data-role="header" data-position="inline">
    <h1>Desarrollo organizacional</h1>
    <a href="<%= url_for :controller => :LearningAndGrowth, :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse" <%= "data-ajax='false'" if is_bb6 %>>
      Back
    </a>
  </div>

  <div data-role="content" class="principal-content">
    <div class="titles">
      <div class="details">
        <p class="flecha">Tend</p>
      </div>
      Valor
    </div>
    <div class="resume">
      <div class="details">
        <img src="<%= @tend_img[@desarrollo_organizacional.tend.to_i] %>" class="flecha"/>
      </div>
      <span class="value <%= @flag_class[@desarrollo_organizacional.flag.to_i] %>">
        <%= @desarrollo_organizacional.value %>
      </span>
    </div>
    <div class="chart">
      <div class="section-title">
        Grafico 1 a√±o
      </div>
      <div id="chart_div"></div>
    </div>
    <div class="kpi">
      <div class="titles">
        <div class="details">
          <p class="value value-title">Valor</p>
        </div>
        Kpi
      </div>
      <ul data-role="listview" id="lista">
        <li>
          <div class="details">
            <p class="value"> <%= @desarrollo_organizacional.capacitacion %> &#37;</p>
          </div>
            Capacitacion
        </li>
        <li>
          <div class="details">
            <p class="value"> <%= @desarrollo_organizacional.cuadros_reemplazo %> &#37;</p>
          </div>
            Cuadros de reemplazo
        </li>
        <li>
          <div class="details">
            <p class="value"> <%= @desarrollo_organizacional.reemplazos_internos %> &#37;</p>
          </div>
            Reemplazos internos
        </li>
      </ul>
    </div>
  </div>

</div>