<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New ExposicionRiesgo</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @exposicion_riesgo.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Cumplimiento iniciativas: </td>
                <td class="itemValue"><input type="text" name="exposicion_riesgo[cumplimiento_iniciativas]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Incid operacionales: </td>
                <td class="itemValue"><input type="text" name="exposicion_riesgo[incid_operacionales]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
