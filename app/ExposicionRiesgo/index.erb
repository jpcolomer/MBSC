<div data-role="page" id="kpi_index">

  <div data-role="header" data-position="inline">
    <h1>Exposicion al riesgo</h1>
    <a href="<%= url_for :controller => :Client, :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse" <%= "data-ajax='false'" if is_bb6 %>>
      Back
    </a>
  </div>

  <div data-role="content" class="principal-content">
    <div class="titles">
      <div class="details">
        <p class="flecha">Tend</p>
      </div>
      Valor
    </div>
    <div class="resume">
      <div class="details">
        <img src="<%= @tend_img[@exposicion_riesgo.tend.to_i] %>" class="flecha"/>
      </div>
      <span class="value <%= @flag_class[@exposicion_riesgo.flag.to_i] %>">
        <%= @exposicion_riesgo.value %>
      </span>
    </div>
    <div class="chart">
      <div class="section-title">
        Grafico 1 a√±o
      </div>
      <div id="chart_div"></div>
    </div>
    <div class="kpi">
      <div class="titles">
        <div class="details">
          <p class="value value-title">Valor</p>
        </div>
        Kpi
      </div>
      <ul data-role="listview" id="lista">
        <li>
          <div class="details">
            <p class="value"> <%= @exposicion_riesgo.cumplimiento_iniciativas %> &#37;</p>
          </div>
            Cumplimiento iniciativas
        </li>
        <li>
          <div class="details">
            <p class="value"> <%= @exposicion_riesgo.incid_operacionales %> N</p>
          </div>
            Incidentes operacionales
        </li>
      </ul>
    </div>
  </div>

</div>