<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @ebitda.value %></h1>
    <a href="<%= url_for :action => :show, :id => @ebitda.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @ebitda.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @ebitda.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="ebitda[value]" class="fieldLabel">Value</label>
            <input type="text" id="ebitda[value]" name="ebitda[value]" value="<%= @ebitda.value %>" <%= placeholder( "Value" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
